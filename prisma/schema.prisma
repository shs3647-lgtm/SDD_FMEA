// APQP 개정 이력
model ApqpRevision {
  id     String @id @default(uuid())
  apqpNo String // FK: apqp_registrations.apqpNo

  revNo       String // Rev.01, Rev.02, ...
  revDate     String? // 개정일자
  description String? // 개정내용
  author      String? // 작성자
  approver    String? // 승인자

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  registration ApqpRegistration @relation(fields: [apqpNo], references: [apqpNo], onDelete: Cascade)

  @@index([apqpNo])
  @@map("apqp_revisions")
}

// APQP 단계 (Phase 1~5)
model ApqpPhase {
  id     String @id @default(uuid())
  apqpNo String // FK: apqp_registrations.apqpNo

